<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VIP Panel - Exclusive Access</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #fff;
        }
        .container {
            background: rgba(255, 255, 255, 0.1);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            width: 90%;
            max-width: 400px;
            text-align: center;
        }
        h1 {
            font-size: 28px;
            margin-bottom: 20px;
        }
        input[type="email"], input[type="password"] {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }
        button {
            width: 100%;
            padding: 12px;
            background: #ff4444;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s;
        }
        button:hover {
            background: #cc0000;
        }
        .error, .message {
            margin-top: 20px;
            font-size: 16px;
        }
        .error {
            color: #ff4444;
        }
        .message {
            color: #ffd700;
        }
        @media (max-width: 600px) {
            .container {
                padding: 20px;
            }
            h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container" id="loginContainer">
        <h1>VIP Panel - Login</h1>
        <input type="email" id="email" placeholder="Enter your email" required>
        <input type="password" id="password" placeholder="Enter your password" required>
        <button onclick="checkLogin()">Login</button>
        <div id="message" class="error"></div>
    </div>

    <script>
        function checkLogin() {
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const messageDiv = document.getElementById('message');
            const container = document.getElementById('loginContainer');

            // Valid credentials
            const validEmail = 'yashkokate315@gmail.com';
            const validPassword = '12345678';

            if (email === validEmail && password === validPassword) {
                // Replace login form with prank message
                container.innerHTML = `
                    <h1>VIP Panel Access Denied</h1>
                    <p class="message">Can't open due to screen share detected!</p>
                    <p class="error">Privacy Interrupt: Unauthorized access attempt detected. Please stop sharing your screen to proceed.</p>
                `;
            } else {
                // Show error for invalid credentials
                messageDiv.textContent = 'Error: Not a part of VIP Panel!';
                messageDiv.className = 'error';
            }
        }

        // Prevent form submission on Enter key (optional for cleaner UX)
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Enter') {
                event.preventDefault();
                checkLogin();
            }
        });
    </script>
</body>
</html>
